generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  rstrId            Int      @id
  rstrName          String
  rstrRoadAddr      String
  rstrImgUrl        String?
  rstrLotNumberAddr String
  rstrLat           String
  rstrLng           String
  rstrPhone         String?
  bizName           String?
  rstrDescription   String
  bizLicenceName    String
  updatedAt         DateTime @updatedAt
  menus             Menu[]
}

model Menu {
  menuId          Int        @id
  menuName        String
  foodImgUrl      String?
  menuPrice       Int
  isSpecial       String
  specialName     String?
  specialUrl      String?
  areaName        String
  rstrName        String
  menuCategoryL   String?
  rstrId          Int
  menuCategoryS   String?
  menuDescription String?
  updatedAt       DateTime   @updatedAt
  restaurant      Restaurant @relation(fields: [rstrId], references: [rstrId])
}
